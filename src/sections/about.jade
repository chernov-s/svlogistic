include _tmpl
include source/aboutList

mixin aboutRender(item)
    .about__item.js-about-item(data-year=item.year, data-image="assets/img/about/#{item.image}")
        h4 !{item.title}
        hr
        each option in item.description
            p !{option}

+tmpl('Немного истории', 'about', 'dark-theme js-about about-bg')
    .b-main-container
        h1 Немного истории

        .about.b-slick-arrow.js-slick-about
            for item in aboutList
                +aboutRender(item)