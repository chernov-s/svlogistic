include _tmpl
include source/aboutList

mixin aboutRender(item)
    .about__item(data-year=item.year, data-bg=item.bg)
        h4= item.title
        hr
        each option in item.description
            p= option

+tmpl('Немного истории', 'about', 'dark-theme js-bg-about about-bg about-bg-2005')
    .b-main-container
        h1 Немного истории

        .about.b-slick-arrow.js-slick-about
            for item in aboutList
                +aboutRender(item)